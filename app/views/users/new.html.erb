<h2>Welcome to Add New User</h2>

<%= form_for @users do |f| %>
  <div class="mb-3">
    <%= f.label :Name, {class: "form-label"} %>
    <%= f.text_field :name, { class: "form-control", placeholder: "Description" } %>
  </div>
  <div class="mb-3">
    <%= f.label :Email, {class: "form-label"} %>
    <%= f.text_field :email, { class: "form-control", placeholder: "Description" } %>
  </div>
  <div class="mb-3">
    <%= f.submit "Create", class: "btn btn-primary" %>
    <%= link_to "Back", :back, class: "btn btn-info" %>
  </div>
<% end %>